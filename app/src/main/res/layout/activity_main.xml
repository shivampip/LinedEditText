<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to LinedEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.shivampip.LinedEditText
        android:id="@+id/textEt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lineSpacingExtra="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:background="@null"
        android:gravity="top"
        app:lineTextGap="1.0"
        app:lineColor="#9B9898"
        app:lineWidth="1.0"
        android:text="Today was a wonderful day. I spent the whole day wasting time in the things. But I am happy as at this time, I am working something productive."
        android:textColor="#575757"
        android:textSize="18dp" />


</LinearLayout>